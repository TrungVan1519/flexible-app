  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug-dev",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "args": ["--flavor", "dev", "--target", "lib/main.dart"]
    },

    {
      "name": "debug-prod",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "args": ["--flavor", "prod", "--target", "lib/main.dart"]
    },

    {
      "name": "release-dev",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": ["--flavor", "dev", "--target", "lib/main.dart"]
    },

    {
      "name": "release-prod",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": ["--flavor", "prod", "--target", "lib/main.dart"]
    }
  ]
}
